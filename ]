use bevy::prelude::*;

#[derive(Component)]
pub struct Ant {}

#[derive(Component)]
pub struct Timer;


pub fn ant_wander_system(
    mut query: Query<(&mut Ant, &mut Timer)>,
    mut rng: ResMut<RandomNumberGenerator>,
) {
    for (mut ant, mut timer) in query.iter_mut() {
        if timer.finished {
            let direction = rng.get_vec2();
            ant.transform.translation += direction.extend(0.0).normalize();
            ant.transform.rotation = Quat::from_rotation_z(direction.y.atan2(direction.x));
            timer.reset();
        }
    }
}
